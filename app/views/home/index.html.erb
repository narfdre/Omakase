<div class="awesome-header">
	<div class="container">
		<% if @settings %>
			<h1><%= @settings.app_name%></h1>
			<p><%= @settings.description %></p>
		<% else %>
			<h1>Omakase!</h1>
			<p>Chef's Choice, please enjoy the hand picked products.</p>
		<% end %>
	</div>	
</div>
<div class="container">
	<% if !notice.blank? %>
		<div class="alert">
		  <button type="button" class="close" data-dismiss="alert">Ã—</button>
		  <%= notice %>
		</div>
	<% end%>
	<div class="container-fluid">
	  <% @products.each do |i| %>
	    <a class="image-wrapper center-thumb img-polaroid" href="/products/<%= i.slug%>">
	    	<% if i.featured? %>
		    	<div class="ribbon-wrapper">
		    		<div class="ribbon featured">Featured</div>
		    	</div>
		    <% elsif i.created_at > 1.day.ago %>
		    	<div class="ribbon-wrapper">
		    		<div class="ribbon new">New</div>
		    	</div>
	    	<% end %>
	      <%= image_tag(i.image_url(:thumb))%>
	    </a>
	  <% end %>
	</div>
</div>