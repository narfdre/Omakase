<% content_for :script do %>
  <%= javascript_include_tag "admin.js" %>
<% end %>
<% content_for :links do %>
	<li>
		<a href="/logout"><span class="icon-signout"></span>Logout</a>
	</li>
<% end %>

<div class="container">
	<% if !notice.blank? %>
		<div class="alert">
		  <button type="button" class="close" data-dismiss="alert">Ã—</button>
		  <%= notice %>
		</div>
	<% end%>
	<h1>Admin</h1>
	<p>use this table to manage uploads</p>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Source</th>
				<th>Artist</th>
				<th>Referer</th>
				<th>Referer's Contact</th>
				<th class="text-center">Featured</th>
				<th class="text-center">Display</th>
			</tr>
		</thead>
		<tbody>
		  <% @products.each do |i| %>
		    <tr data-content="<img src=&quot;<%=i.image_url(:thumb) %>&quot;/>" data-trigger="hover" data-placement="bottom" data-html="true">
		    	<td><%=i.name %></td>
		    	<td><%=i.source %></td>
		    	<td><%=i.artist %></td>
		    	<td><%=i.referer %></td>
		    	<td><%=i.contact %></td>
		    	<td class="text-center">
		    		<%if i.featured %>
		    			<span class="icon-star"></span>
		    		<% else %>
						<span class="icon-star-empty"></span>
		    		<% end %>
		    	</td>
		    	<td class="text-center">
		    		<% if i.display %>
		    			<span class="icon-check"></span>
		    		<% else %>
						<span class="icon-check-empty"></span>
		    		<% end %>
		    	</td>
		    </tr>
		  <% end %>
		</tbody>
	</table>
</div>